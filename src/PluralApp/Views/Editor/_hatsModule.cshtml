@model IEnumerable<CustomizedGoods.Entites.ItemModel>

<div class="tile-group double">
    <span class="tile-group-title">Custom Hats</span>
    <div class="tile-container">


        <div class="tile custom_box" data-role="tile">
            <div class="tile-content">


                @foreach (var item in Model)
                {

                    <a href="~/editor/viewhat/@item.id_in_category"><div class="live-slide"><img src="~/upload/models/@(item.item_type + item.id_in_category).png" data-role="fitImage" data-format="fill"></div></a>

                }

            </div>
        </div>

        @for (int i = 0; i < Model.ToArray().Count(); i++)
        {
            @if (i == 4) { break; }

            <div class="tile-small bg-yellow custom_box" data-role="tile">
                <div class="tile-content iconic">
                    <a href="~/editor/viewHat/@Model.ToArray()[i].id_in_category">
                        <img src="~/upload/models/@(Model.ToArray()[i].item_type + Model.ToArray()[i].id_in_category).png">
                    </a>
                </div>
            </div>
        }


    </div>
    <a href="~/Editor/hat">
        <div class="tile-wide bg-green fg-white custom_box" data-role="tile">
            <div class="tile-content iconic">
                <img src="~/img/hat/air_pilot_hat.png" class="icon">
            </div>
            <div class="tile-label">Make your hat uneque</div>
        </div>
    </a>
</div>